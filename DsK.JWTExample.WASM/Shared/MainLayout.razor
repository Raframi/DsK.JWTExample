@inherits LayoutComponentBase
@inject NavigationManager NavigationManager
@implements IDisposable
@using DsK.JWTExample.WASM.Pages
<AuthorizeView>
    <Authorized>
        <div class="page">
            <div class="sidebar">
                <NavMenu />
            </div>
            <main>
                <article class="content px-4">
                    @Body
                </article>
            </main>
        </div>
    </Authorized>
    <NotAuthorized>
        <Login />
    </NotAuthorized>
</AuthorizeView>

@code {
    protected override void OnInitialized()
    {
        NavigationManager.LocationChanged += HandleLocationChanged;
    }

    // This method is triggered when the location changes.
    private async void HandleLocationChanged(object sender, LocationChangedEventArgs e)
    {
        // URL of the page you want to exclude.
        var urlToExclude = "/ Login";

        // Check if the new URL is the one you want to exclude.
        // NavigationManager.Uri contains the absolute URI, so we compare against it.
        if (NavigationManager.ToBaseRelativePath(e.Location).Equals(urlToExclude, StringComparison.OrdinalIgnoreCase))
        {
            return; // It's the page we want to exclude, so we don't proceed.
        }

        // Check Token Expiration
        await _securityServiceClient.PrepareBearerToken();
    }

    public void Dispose() // Unsubscribe when the component is destroyed to avoid memory leaks.
    {
        NavigationManager.LocationChanged -= HandleLocationChanged;
    }
}